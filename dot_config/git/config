[user]
    email = ryan.h.byon@gmail.com
    name = Ryan Byon

[pager]
    branch = false

[init]
    defaultBranch = main

[core]
    pager = delta
    excludesfile = ~/.config/git/ignore

[interactive]
    diffFilter = delta --color-only

[add.interactive]
    useBuiltin = false # required for git 2.37.0

[include]
    path = ~/.config/git/themes.gitconfig

[delta]
    features = lesser-panda

[merge]
    tool = nvimdiff
    conflictstyle = diff3
    prompt = false

[diff]
    colorMoved = default

[help]
    autocorrect = 100

[pull]
    rebase = true   # rebase
    ; rebase = false  # merge
    ; ff = only       # fast-forward only

[alias]
    # general
    br = branch
    co = checkout
    df = diff
    st = status
    sw = switch
    wt = worktree
    # commit
    cm = commit
    reword = commit --amend
    oops = commit --amend --no-edit
    uncommit = reset --soft HEAD~1
    # logs
    lg = log --graph --oneline --decorate
    last = log -1 HEAD
    five = log -5
    # worktree
    init-worktree  = "!sh $HOME/.local/script/git_init_bare_worktree.sh"
    clone-worktree = "!sh $HOME/.local/script/git_clone_bare_worktree.sh"
