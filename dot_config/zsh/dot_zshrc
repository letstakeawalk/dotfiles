# always show ls when chpwd
function chpwd() {
    # emulate -L zsh
    pwd
    eza --group-directories-first
}

# benchmark zsh startup
timezsh() {
    echo "\n--- w/ zshrc ----------------"
    shell=${1-$SHELL}
    hyperfine -N --warmup 5 --max-runs 30 "$shell -i -c exit"
    echo "\n--- w/o zshrc ---------------"
    hyperfine -N --warmup 5 --max-runs 30 "$shell -i -f -c exit"
}
